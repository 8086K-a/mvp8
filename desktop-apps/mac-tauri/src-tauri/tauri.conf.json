{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "MornHub",
  "version": "1.0.0",
  "identifier": "com.mornhub.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "https://mornhub.help",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "MornHub",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
