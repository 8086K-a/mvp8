# Get these from Tencent Cloud Console: https://console.cloud.tencent.com/tcb
NEXT_PUBLIC_WECHAT_CLOUDBASE_ID=cloudbase-1gnip2iaa08260e5

# CloudBase API Keys (for server-side authentication)
CLOUDBASE_SECRET_ID=your_cloudbase_secret_id
