# Supabase Configuration
# Get these values from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Example:
# NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Facebook OAuth Configuration (Optional)
# Get these from Facebook Developers Console
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# WeChat OAuth Configuration (Website Login)
# Get these from WeChat Open Platform: https://open.weixin.qq.com/
WECHAT_APP_ID=your_wechat_web_app_id
WECHAT_APP_SECRET=your_wechat_web_app_secret
# Note: Use WeChat Official Account or Open Platform credentials
# Different from Mini Program credentials 

# Site URL for OAuth redirects
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ============================================
# Payment Configuration
# ============================================

# Stripe Payment (International)
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# PayPal Payment (International)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox  # sandbox or live

# Alipay Payment (China + International)
# Get these from Alipay Open Platform: https://open.alipay.com/
NEXT_PUBLIC_ALIPAY_APP_ID=2021005199628151
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do
ALIPAY_PRIVATE_KEY=your_alipay_private_key  # RSA2 Private Key (deployed by Jeff)
ALIPAY_PUBLIC_KEY=your_alipay_public_key    # Alipay Public Key (deployed by Jeff)

# WeChat Pay Payment (China Only)
# Get these from WeChat Pay Merchant Platform: https://pay.weixin.qq.com/
WECHAT_PAY_APP_ID=your_wechat_pay_app_id           # WeChat Official Account APPID
WECHAT_PAY_MCH_ID=your_wechat_pay_mch_id           # Merchant ID
WECHAT_PAY_SERIAL_NO=your_certificate_serial_no    # API Certificate Serial Number
WECHAT_PAY_PRIVATE_KEY=your_wechat_pay_private_key # API Private Key (RSA)
WECHAT_PAY_PUBLIC_KEY=your_wechat_pay_public_key   # API Public Key (optional)
WECHAT_PAY_API_V3_KEY=your_api_v3_key              # APIv3 Key (32-char string)

# Note: 
# - Alipay keys will be configured in Vercel/Tencent Cloud by Jeff
# - WeChat Pay requires enterprise verification and merchant account
# - Callback URL (Alipay): https://mornhub.help/api/payment/alipay/notify
# - Callback URL (WeChat): https://mornhub.help/api/payment/wechat/notify
# - Return URL: https://mornhub.help/payment/success

